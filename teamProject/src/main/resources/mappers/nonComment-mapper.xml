<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.kh.team.non_comment">
  	
	<insert id="commentInsert">
		insert into NON_COMMENT(cno,bno,content,adminId) values(seq_cno.nextval,#{bno},#{content},#{adminId})
	</insert>
	
	<select id="commentSelect" resultType="NonCommentVo">
		select * from NON_COMMENT where bno=#{bno} order by cno desc
	</select>
	
	<update id="commentUpdate">
		update NON_COMMENT set 
		content=#{content}
		where cno=#{cno}
	</update>
	
	<delete id="commentDelete">
		delete from NON_COMMENT where cno=#{cno}
	</delete>  
  
  </mapper>